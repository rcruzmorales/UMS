@using System.ServiceModel.Security
@model UMS.Models.UserInfo

<div class="container-fluid">
    <div class="row">
        <center><img src="@Url.Content("~/Content/Images/" + Model.ProfilePicture.Filename)" class="img-responsive img-circle" width="200" height="150" /> </center>
        <hr />
    </div>


    <div class="row">

        <div class="col-md-6 ">
            @Html.Label("Username:")
            @Html.DisplayFor(model => model.UserName)<br />

            @Html.Label("First Name:")
            @Html.DisplayFor(model => model.FirstName)<br />

            @Html.Label("Last Name:")
            @Html.DisplayFor(model => model.LastName)<br />

            @Html.Label("Email:")
            @Html.DisplayFor(model => model.Email)<br />
        </div>

        <div class="col-md-6">
            @Html.Label("Address:")
            @Html.DisplayFor(model => model.Address)<br />

            @Html.Label("City:")
            @Html.DisplayFor(model => model.City)<br />

            @Html.Label("State:")
            @Html.DisplayFor(model => model.Country)<br />

            @Html.Label("Zip Code:")
            @Html.DisplayFor(model => model.Zipcode)<br />
        </div>
    </div>

</div>
